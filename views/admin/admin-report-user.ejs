  <!-- Custom styles for this template -->
  <link rel="stylesheet" href="/style/style.css">
  <link rel="stylesheet" href="../../public/style/admin-dashboard.css">
</head>

<body>
  <!-- navbar -->
  <%-include('_admin-nav') %>
    <!-- navbar -->

    <div class="container-fluid">
      <div class="row">
        <!-- sidebar -->
        <%-include('_admin-sidebar') %>
          <!-- sidebar -->
          
          <div class="container d-flex justify-content-center" height="700px">
              <canvas id="myChart" width="600px" height="600px"></canvas>
              <div class="container">
                <h1>End User summary</h1>
                <!-- <input type="text" id="userRatio" value=" disabled> -->
                <label for="houseownerCount">No of registered Housemaids</label>
                <input type="number" id="houseownerCount" value="<%= houseownerCount %>"disabled>
                <label for="houseownerCount">No of registered Houseowners</label>
                <input type="number" id="housemaidCount" value="<%= housemaidCount %>"disabled>
              </div>
          </div>

          












          <!-- jQuery first, then Popper.js, then Bootstrap JS -->
          <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
          <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>

          <!-- Icons -->
          <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
          <script>
            feather.replace()
          </script>

          <!-- Graphs -->
          <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>

          <script>
            const ctx = document.getElementById('myChart');
           
            let houseownerCount = document.getElementById('houseownerCount').value;
            let housemaidCount = document.getElementById('housemaidCount').value; 
          
            var myChart = new Chart(ctx, {
              type: 'doughnut',
              data: {
               labels:  ["houseownerCount", "housemaidCount"],
                datasets: [{
                  label: '# of Tomatoes',
                  data: [houseownerCount, housemaidCount],
                  backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                  ],
                  borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                  ],
                  borderWidth: 1
                }]
              },
              options: {
                responsive: false,
                plugins: {
                  legend: {
                    position: 'top',
                  },
                  title: {
                    display: true,
                    text: 'Chart.js Doughnut Chart'
                  }
                }
              },
            });
          </script>
</body>

</html>