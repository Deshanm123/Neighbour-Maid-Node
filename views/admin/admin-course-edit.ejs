<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>NeighbourMaid|Admin|Course Edit</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
    <!-- font awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
        integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <!-- booostrap icons cdn  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="../../public/style/admin-dashboard.css">
</head>

<body>
    <!-- navbar -->
    <%-include('_admin-nav') %>
        <!-- navbar -->


        <div class="container-fluid">
            <div class="row">
                <!-- sidebar -->
                <%-include('_admin-sidebar') %>
                    <!-- sidebar -->
                    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
                        <div class="container p-5">
                            <!-- alert  notification  -->
                            <% if(alert !=='' ) {%>
                                <div class="alert alert-<%=alert.msgType %> alert-dismissible fade show py-3"
                                    role="alert">

                                    <%= alert.msg %>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                </div>
                                <% } %>


                                    <h1 class="pb-3">Edit Course</h1>
                                    <% courses.forEach(course=>{ %>
                                        <% if(course.courseId !==undefined){ %>
                                            <Form action="/admin/courses/editCourse/<%= course.courseId %>?_method=PUT"
                                                method="POST">
                                                <!-- form partial -->
                                                <!-- <1%- include('_course-form',{course:course}) %> -->
                                                    <%}%>
                                                        <div class="form-group">
                                                            <button type="submit" class="btn btn-primary">Update
                                                                Course</button>
                                                            <a href="/admin/courses/"
                                                                class="btn btn-secondary">Cancel</a>
                                                        </div>
                                            </Form>
                                            <% }); %>
                        </div>
                    </main>
            </div>
        </div>



        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
        <!-- circular progress bar -->
        <script
            src='https://cdnjs.cloudflare.com/ajax/libs/jquery-circle-progress/1.2.0/circle-progress.min.js'></script>
        <!-- Icons -->
        <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
        <script>
            feather.replace()
        </script>



</html>