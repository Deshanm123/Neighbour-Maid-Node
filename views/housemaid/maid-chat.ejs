    <!-- modal -->


    <!-- chat section -->
    <h1 class="text-center">Neighbour Maid Chat </h1>
    <div class="container p-5" id="chat-box-container">
      <div class="row">
        <!-- Users box-->
        <div class="col-4 ">

          <p class="h5 py-1 text-center">Recent Chats</p>


          <div class="messages-box">
            <div class="list-group rounded-0">
              <%houseOwnerArr.forEach(ho=>{%>
                <!-- chat contact -->
                <div class="media-body ml-4  ">
                  <a href="/housemaid/chat?hm=<%=currentmaidId%>&ho=<%=ho.id%>&sentby=hm"
                    class="list-group-item list-group-item-action list-group-item-dark rounded-0 btn btn-outline-primary py-3">
                    <h6 class="mb-0 text-center">
                      <%=ho.name%>
                    </h6>
                  </a>
                </div>
                <!-- chat contact -->

                <%})%>

            </div>
          </div>
          <!-- </div> -->
        </div>
        <!-- Chat Box-->
        <div class="col-8">

          <!-- <div class="row"> -->

          <div id="status"></div>
          <div id="chat">

            <div class="card">
              <div id="messages" class="card-block"></div>
            </div>
            <br>
            <textarea id="textarea" class="form-control" placeholder="Enter Message"></textarea>
          </div>

          <!-- </div> -->

        </div>
      </div>
    </div>

    <!-- chat section -->



